<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <queries>
        <intent>
            <action android:name="android.intent.action.SENDTO" />

            <data android:scheme="mailto" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Contabilidad"
        tools:targetApi="31">
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.VerInformes.editarInformeEspecificoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.VerInformes.VerInformeEspecificoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.VerInformes.VerInformesPorHoraActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.VerInformes.VerInformesActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.CrearNuevoInforme.CrearNuevoInformeActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.CalcularMasas.CalcularMasasActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.UI.AcercaDe.AcercaDeActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name="com.emanuel_dam.contabilidad.VistaPrincipalActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>