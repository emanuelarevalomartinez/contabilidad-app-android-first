<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primario"
    tools:context="com.emanuel_dam.contabilidad.VistaPrincipalActivity">

    <TextView
        android:id="@+id/barraNombreApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="4dp"
        android:text="@string/nombre_app"
        android:textColor="@color/secundario"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="14dp" />

    <LinearLayout
        android:id="@+id/botonesAgrupados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barraNombreApp">

        <Button
            android:id="@+id/botonCrearNuevoInforme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:paddingVertical="20dp"
            android:textSize="24dp"
            android:textColor="@color/secundario"
            android:backgroundTint="@color/aceptar"
            android:text="Nuevo Informe" />

        <Button
            android:id="@+id/botonVerLosInformes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:paddingVertical="20dp"
            android:textSize="24dp"
            android:textColor="@color/secundario"
            android:backgroundTint="@color/aceptar"
            android:text="Informes" />

        <Button
            android:id="@+id/botonCalcularMasas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:paddingVertical="20dp"
            android:textSize="24dp"
            android:textColor="@color/secundario"
            android:backgroundTint="@color/aceptar"
            android:text="Calcular Masas" />

        <Button
            android:id="@+id/botonAcercaDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="6dp"
            android:paddingVertical="20dp"
            android:textSize="24dp"
            android:textColor="@color/secundario"
            android:backgroundTint="@color/aceptar"
            android:text="Acerca De" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>