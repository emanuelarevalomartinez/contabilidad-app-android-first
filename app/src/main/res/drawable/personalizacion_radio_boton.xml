<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado cuando está seleccionado -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/aceptar" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="12dp"
                android:color="@color/textoPrincipal" />
        </shape>
    </item>z

    <!-- Estado cuando no está seleccionado -->
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/secundario" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <stroke
                android:width="12dp"
                android:color="@color/textoPrincipal" />
        </shape>
    </item>

</selector>
